@model LukeMooresWebsite.Models.ExperienceModel

@{
    ViewData["Title"] = "Experience";
}
<h1>@ViewData["Title"]</h1>

<script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
<script src="~/js/Experience.js" type="text/javascript"></script>

<script type="text/javascript">

    $(document).ready(function () {
        WireEvents();
    });

    function WireEvents() {
        $('#FrontEndButton').click(function () {
            DisplayFrontEnd();
        });
        $('#BackEndButton').click(function () {
            DisplayBackEnd();
        });
        $('#DatabaseButton').click(function () {
            DisplayDatabase();
        });
    }
</script>

<p>Click each button to read about my experience with different technologies</p>

<table id="ButtonsTable">
    <tr>
        <td>
            <button id="FrontEndButton" type="button" class="btn btn-primary btn-lg" title="FrontEnd">Front End</button>
        </td>
        <td>
            <button id="BackEndButton" type="button" class="btn btn-primary btn-lg" title="BackEnd">Back End</button>
        </td>
        <td>
            <button id="DatabaseButton" type="button" class="btn btn-primary btn-lg" title="Database">Database</button>
        </td>
    </tr>
</table>

<div id="FrontEndExperience" class="hide">
    <h3>FrontEnd</h3>
    <p>Here write about front end stuff</p>
</div>

<div id="BackEndExperience" class="hide">
    <h3>BackEnd</h3>
    <p>Here write about back end stuff</p>
</div>

<div id="DatabaseExperience" class="hide">
    <h3>Database</h3>
    <p>Here write about database stuff</p>
</div>
